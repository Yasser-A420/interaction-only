{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
  }
}
